{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "brightscript",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env",
      "host": "${env:ROKU_HOST}",
      "stopOnEntry": false,
      "enableDebuggerAutoRecovery": false,
      "stopDebuggerOnAppExit": false,
